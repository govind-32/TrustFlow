{
    "name": "trustflow",
    "version": "1.0.0",
    "description": "Blockchain-based invoice financing platform for MSMEs",
    "private": true,
    "workspaces": [
        "contracts",
        "backend",
        "frontend"
    ],
    "scripts": {
        "contracts:compile": "npm run compile --workspace=contracts",
        "contracts:test": "npm run test --workspace=contracts",
        "backend:dev": "npm run dev --workspace=backend",
        "frontend:dev": "npm run dev --workspace=frontend",
        "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}